<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Task Selection Spinner -->
    <Spinner
        android:id="@+id/taskSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:entries="@array/task_list" />

    <!-- Start Date Picker -->
    <Button
        android:id="@+id/startDateButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select Start Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/taskSpinner"
        android:layout_marginTop="16dp"/>

    <!-- End Date Picker -->
    <Button
        android:id="@+id/endDateButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select End Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startDateButton"
        android:layout_marginTop="16dp"/>

    <!-- Add Task Button -->
    <Button
        android:id="@+id/confirmTaskButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Task"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/endDateButton"
        android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
